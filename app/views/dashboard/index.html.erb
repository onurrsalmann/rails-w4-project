<p id="notice"><%= notice %></p>

<h1>Dashboard</h1>
<h2>My Books</h2>
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Pagecount</th>
    <th>Share</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.pagecount %></td>
      <td><%= book.share %></td>
      <td><%= link_to 'Show', book %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>

<h2>My Comments</h2>
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Book</th>
    <th>Allow</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @comments.each do |comment| %>
    <tr>
      <td><%= comment.title %></td>
      <td><%= comment.content %></td>
      <td><%= Book.find(comment.book_id).title %></td>
      <td><%= comment.allow %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<h2>Permission to Comments</h2>

<% @not_allow_comments.each do |comment| %>
  <tr>
    <td>
      <strong>
        <%= link_to "#{User.find(comment.user_id).username} wrote a comment your #{Book.find(comment.book_id).title} book. Clik here to accept it.", comment_path(comment) %>
      </strong>
    </td>
    <br>
  </tr>
<% end %>
