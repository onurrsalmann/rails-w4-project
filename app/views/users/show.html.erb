<h1>Profile</h1>
<h3>Username: <%= @user.username %></h3>
<h3>Email: <%= @user.email %></h3>
<h3>Books</h3>
<% if @books.any? %>
  <table>
    <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
    </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= link_to 'Show', book %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <h4>Henüz hiç kitap eklenmemiş.</h4>
<% end %>