<h1>BooksShare</h1>

<h2>Books</h2>
<% if @books.any? %>
  <table>
    <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Username</th>
      <th>Tradeable Status</th>
    </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.username %></td>
        <td>
        <%= if book.t_status
              link_to book.t_status, new_book_tradeable_path(book)
           else
             book.t_status
         end %></td>
        <% if current_user %>
          <td><%= link_to 'Show', book %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <h3>Henüz hiç kitap eklenmemiş.</h3>
<% end %>