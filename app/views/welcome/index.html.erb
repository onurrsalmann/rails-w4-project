<h1>BooksShare</h1>
<h2>Books</h2>
<% if @books.any? %>
  <table>
    <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
    </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <h3>Henüz hiç kitap eklenmemiş.</h3>
<% end %>